<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:text="@string/new_pindao"
            android:textColor="#001122"
            android:textSize="16dp"
            />
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:switchMinWidth="50dip"
            android:layout_marginTop="16dip"
            android:layout_alignParentRight="true"
            android:paddingRight="16dip"
            android:thumb="@drawable/switch_ios_thumb_select"
            android:track="@drawable/switch_ios_track_selector"
            android:id="@+id/open_select"></Switch>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="14dip"
        android:background="#f9f9f9"></View>

    <GridView
        android:id="@+id/user_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:horizontalSpacing="14dip"
        android:verticalSpacing="14dip"
        android:gravity="center"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:scrollbars="none"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#fafafa"
        android:layout_marginBottom="14dip"
        android:layout_marginTop="10dip"></View>
    <TextView
        android:id="@+id/tv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dp"
        android:text="@string/more_pindao"
        android:textColor="#001122"
        android:visibility="gone"
        android:textSize="16dp"
        />
    <GridView
        android:id="@+id/other_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dip"
        android:layout_marginRight="14dip"
        android:horizontalSpacing="14dip"
        android:verticalSpacing="14dip"
        android:numColumns="4"
        android:visibility="gone"
        android:stretchMode="columnWidth"
        android:scrollbars="none"
        android:gravity="center"/>
</androidx.appcompat.widget.LinearLayoutCompat>