<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:width="1dip" android:color="@color/common_stoke" android:dashWidth="4dp" android:dashGap="2dp"/>
                    <solid android:color="@color/common_bg"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <shape>
            <stroke android:color="@color/selected_stoke" android:width="1dp"/>
            <solid android:color="@color/selected_bg"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="0.5dp" android:color="@color/bg_pressed_stroke"/>
            <solid android:color="@color/bg_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="0.5dp" android:color="@color/normal_stoke"/>
            <solid android:color="@color/normal_bg"></solid>
        </shape>
    </item>
</selector>